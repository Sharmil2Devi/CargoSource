
@{
    ViewBag.Title = "PackageMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Scripts.Render("~/CustomScripts/PackageMaster.js?t=" + @DateTime.Now.Ticks.ToString())
}

<input id="hf_GetPackageData" type="hidden" value='@Url.Action("GetPackageData",  "Admin")'>
<input id="hf_UpdatePackageDetails" type="hidden" value='@Url.Action("UpdatePackageDetails", "Admin")'>
<input id="hf_GetPackageDetails" type="hidden" value='@Url.Action("GetPackageDetails",  "Admin")'>
<input id="hf_PackageInfoDelete" type="hidden" value='@Url.Action("PackageInfoDelete", "Admin")'>
<div class="page-content">

    @*<div class="jumbotron content">*@
    <table id="tblPackage" class="display" width="100%"></table>
    @*</div>*@
</div>
<div class="modal fade" id="myModalone" role="dialog">
    <div class="modal-dialog modal-large">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Add/Update Package Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div id="divContent" class="col-md-6">
                        <div class="form-group label-floating">
                            <label class="control-label">Type</label><em>*</em>
                            <div class="nk-int-st">
                                <input type="text" class="form-control input-sm" id="txtType" placeholder="Enter Type">
                            </div>
                        </div>
                    </div>
                    <div id="divContent" class="col-md-6">
                        <div class="form-group label-floating">
                            <label class="control-label">Short Code</label>
                            <div class="nk-int-st">
                                <input type="text" class="form-control input-sm" id="txtCode" placeholder="Enter Short Code">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <br />
                <button type="button" class="btn btn-default" id="btnUpdate">Save changes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

